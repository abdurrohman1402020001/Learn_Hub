<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.onboarding.screen.OnBoardingScreenThird">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_logo_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_app"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belajar\n Dari Mana Saja!"
        android:textColor="@color/neutral_05"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_app"
        app:layout_constraintStart_toStartOf="@id/iv_logo_app"
        app:layout_constraintEnd_toEndOf="@id/iv_logo_app"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_onboard_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_onboard_third"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/tv_intro"
        app:layout_constraintStart_toStartOf="@id/tv_intro"
        app:layout_constraintEnd_toEndOf="@id/tv_intro"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_indicator_third"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@id/iv_onboard_third"
        app:layout_constraintStart_toStartOf="@id/iv_onboard_third"
        app:layout_constraintEnd_toEndOf="@id/iv_onboard_third"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_arrow_next"
        android:text="Daftar"
        android:textAllCaps="false"
        app:iconGravity="textEnd"
        app:cornerRadius="25dp"
        app:iconPadding="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/indicator"
        app:layout_constraintStart_toStartOf="@id/indicator"
        app:layout_constraintEnd_toEndOf="@id/indicator"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_sudah_punya_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudah punya akun?"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/neutral_05"
        app:layout_constraintTop_toBottomOf="@id/btn_daftar"
        app:layout_constraintStart_toStartOf="@id/btn_daftar"
        app:layout_constraintEnd_toEndOf="@id/btn_daftar"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_masuk_disini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk di sini"
        android:layout_marginStart="8dp"
        android:textColor="@color/DARKBLUE05"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/tv_sudah_punya_akun"
        app:layout_constraintStart_toEndOf="@id/tv_sudah_punya_akun"
        app:layout_constraintBottom_toBottomOf="@id/tv_sudah_punya_akun"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_masuk_tanpa_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk Tanpa Login"
        android:textSize="14sp"
        android:textColor="@color/DARKBLUE03"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_masuk_disini"
        app:layout_constraintStart_toStartOf="@id/tv_sudah_punya_akun"
        app:layout_constraintEnd_toEndOf="@id/tv_masuk_disini"/>

</androidx.constraintlayout.widget.ConstraintLayout>