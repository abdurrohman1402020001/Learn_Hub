<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.onboarding.screen.OnBoardingScreenSecond">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_logo_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_app"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belajar\n Dari Praktisi Terbaik!"
        android:textColor="@color/neutral_05"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_app"
        app:layout_constraintStart_toStartOf="@id/iv_logo_app"
        app:layout_constraintEnd_toEndOf="@id/iv_logo_app"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_onboard_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_onboard_second"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/tv_intro"
        app:layout_constraintStart_toStartOf="@id/tv_intro"
        app:layout_constraintEnd_toEndOf="@id/tv_intro"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_indicator_second"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@id/iv_onboard_second"
        app:layout_constraintStart_toStartOf="@id/iv_onboard_second"
        app:layout_constraintEnd_toEndOf="@id/iv_onboard_second"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next2"
        android:layout_width="55dp"
        android:layout_height="48dp"
        app:icon="@drawable/ic_arrow_next"
        app:cornerRadius="25dp"
        app:iconPadding="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/indicator"
        app:layout_constraintStart_toStartOf="@id/indicator"
        app:layout_constraintEnd_toEndOf="@id/indicator"/>

</androidx.constraintlayout.widget.ConstraintLayout>